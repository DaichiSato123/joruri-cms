<%

docs = Article::Doc.published.where(content_id: @content.id)
docs = docs.where.not(id: item.id) if item.id
docs = docs.order(published_at: :desc)
docs = docs.collect{|c| [ truncate(c.title, :length => 50), c.id] }

%><table class="show">
  <tr>
    <th>関連記事</th>
    <td>
      <table class="noDesign">
        <tr><td><%= f.array_select "in_rel_doc_ids[0]", docs, :include_blank => "　" %></td></tr>
        <tr><td><%= f.array_select "in_rel_doc_ids[1]", docs, :include_blank => "　" %></td></tr>
        <tr><td><%= f.array_select "in_rel_doc_ids[2]", docs, :include_blank => "　" %></td></tr>
      </table>
    </td>
  </tr>
</table>
