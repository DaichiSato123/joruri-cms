<div class="crudTree">
<div class="tree">
  <p>
    <%= @parent ? @parent.ou : 'LDAP' %></p>
  
  <div class="links">
      <% @groups.each do |g| %>
      <div><%= link_to h(g.ou), url_for(:action => :index, :parent => g.ou) %><br /></div>
      <% end %>
      <%== "<div>no groups</div>" if @groups.empty? %>
  </div>
</div>
<div class="content">
  <table class="index">
    <tr><th>Users</th></tr>
    <% @users.each do |u| %>
    <tr class="<%= cycle '', 'cycle' %>"><td><%= u.name %> (<%= u.uid %>)</td></tr>
    <% end %>
    <% if @users.empty? %><tr><td>no users<br /></td></tr><% end %>
  </table>
</div>
<div class="footer"></div>
</div>
